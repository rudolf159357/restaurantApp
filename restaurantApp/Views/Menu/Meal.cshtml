@model IEnumerable<Meal>

@{
    ViewData["Title"] = "Meal";
}


<div class="container food-section">
     <div class="row">
         @foreach (var item in Model)
         {
                 <div class="col-md-4">
                      <div class="foodBox" style="background: url(../images/meal.jpg); background-size: cover;background-position: center;">
                             <p><a asp-controller="Menu" asp-action="MealProduct" asp-route-id=@item.Id>@item.Type</a></p>
                        </div>
                   </div>
         }
        
  </div>
</div>


